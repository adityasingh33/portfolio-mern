MONGODB_URI=mongodb://localhost:27017/portfolio-mern
PORT=4000

# EmailJS Configuration (optional - preferred)
EMAILJS_API_KEY=your_emailjs_api_key_here
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id

# SMTP Configuration (fallback if EmailJS not configured)
# Option 1: Use SMTP URL (e.g., smtp://user:pass@host:port)
SMTP_URL=smtp://user:password@smtp.example.com:587

# Option 2: Use individual SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# Admin email to receive contact form submissions
ADMIN_EMAIL=admin@example.com
